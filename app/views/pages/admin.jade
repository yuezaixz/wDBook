extends ../layout

block content
	.contrainer
		.row
			form.form-horizontal(method="post",action="/admin/book/new",enctype="multipart/form-data")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 文章名
					.col-sm-10
						input#inputTittle.form-control(type="text",name="book[title]",value=book.title)
					if book._id
						input(type="hidden", name="book[_id]", value=book._id)
				.form-group
					label.col-sm-2.control-label(for="inputAuthor") 作者
					.col-sm-10
						input#inputAuthor.form-control(type="text", name="book[author]", value=book.author)
				.form-group
					label.col-sm-2.control-label(for="inputCountry") 国家
					.col-sm-10
						input#inputCountry.form-control(type="text", name="book[country]", value=book.country)
				.form-group
					label.col-sm-2.control-label(for="inputLanguage") 语种
					.col-sm-10
						input#inputLanguage.form-control(type="text", name="book[language]", value=book.language)
				.form-group
					label.col-sm-2.control-label(for="inputCover") 贴图
					.col-sm-10
						input#inputCover.form-control(type="text", name="book[cover]", value=book.cover)
				.form-group
					label.col-sm-2.control-label(for="uploadCover") 贴图上传
					.col-sm-10
						input#uploadCover(type="file", name="uploadCover")
				.form-group
					label.col-sm-2.control-label(for="inputArticleAddress") 原文地址
					.col-sm-10
						input#inputArticleAddress.form-control(type="text", name="book[articleAddress]", value=book.articleAddress)
				.form-group
					label.col-sm-2.control-label(for="inputYear") 发布时间
					.col-sm-10
						input#inputYear.form-control(type="text", name="book[year]", value=book.year)
				.form-group
					label.col-sm-2.control-label(for="inputTag") 标签
					.col-sm-10
						#tags
						input#inputTag(type="hidden", name="book[tags]", value=book.tags)
				.form-group
					label.col-sm-2.control-label(for="inputSummary") 摘记，有感
					.col-sm-10
						textarea#inputSummary.form-control(type="text", name="book[summary]")= book.summary
				.form-group
					.col-sm-offset-2.col-sm-10
						button.btn.btn-default(type="submit") 摘录
			script(src="/js/admin.js")